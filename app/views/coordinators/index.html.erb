<h5 class="title center-align">Coordenação</h5>
<div class="row">
	<div class="container">
		<% @coordinator.each do |item| %>
			  <div class="square">
				<div class ="row">
					<div class ="center col s12 l3">
					<br>
					<%= image_tag(item.avatar.url(:medium), :class => "foto responsive-img") %>
					</div>
					<div class="col s12 l9">
						<br>
						<b class="nome">Nome:</b>
						<%= item.name %><br>
						<b class="nome">Email:</b>
						<%= item.email %><br>
						<b class="nome">Telefone:</b>
						<%= item.telephone %><br>
						<b class="nome">Sala:</b>
						<%= item.room %><br>
					</div>
				</div>
			  </div>
			<div class="divider"></div><br>
		<%end%>
	</div>
</div>
